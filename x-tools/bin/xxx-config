#!/bin/bash
#
# This is a script which runs tools set up for the Steam runtime

PROGRAM=$(basename "$0")

if [ -z "${STEAM_RUNTIME}" ]; then
    echo "Missing development environment variables, did you run shell.sh?"
    exit 1
fi

# Run the tool...
"${STEAM_RUNTIME}/usr/bin/${PROGRAM}" "$@" | sed -e "s,-I/,-I${STEAM_RUNTIME}/,g" -e "s,-L/,-L${STEAM_RUNTIME}/,g" 

# vi: ts=4 sw=4 expandtab
